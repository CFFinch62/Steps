step: trim
    belongs to: strings
    expects: s as text
    returns: result as text

    declare:
        start as number
        end as number
        char as text

    do:
        set start to 0
        set end to length of s - 1
        
        note: Find first non-space character
        repeat while start is less than length of s
            set char to character at start of s
            if char equals " "
                set start to start + 1
            otherwise
                exit
        
        note: Find last non-space character
        repeat while end is greater than start
            set char to character at end of s
            if char equals " "
                set end to end - 1
            otherwise
                exit
        
        note: Build result string
        set result to ""
        repeat while start is less than or equal to end
            set char to character at start of s
            set result to result added to char
            set start to start + 1
        
        return result
