step: solve_from_profit_and_markup
    belongs to: calculations
    expects: profit as number, markup as number
    returns: price as number, margin as number, profit as number, markup as number, cost as number

    declare:
        cost as number
        price as number
        margin as number

    do:
        set cost to profit / (markup / 100)
        set price to cost + profit
        set margin to (profit / price) * 100

        return price, margin, profit, markup, cost
