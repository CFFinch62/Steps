step: solve_from_cost_and_margin
    belongs to: calculations
    expects: cost as number, margin as number
    returns: price as number, margin as number, profit as number, markup as number, cost as number

    declare:
        price as number
        profit as number
        markup as number

    do:
        set price to cost / (1 - (margin / 100))
        set profit to price - cost
        set markup to (profit / cost) * 100

        return price, margin, profit, markup, cost
