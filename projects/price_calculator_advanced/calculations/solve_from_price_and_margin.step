step: solve_from_price_and_margin
    belongs to: calculations
    expects: price as number, margin as number
    returns: price as number, margin as number, profit as number, markup as number, cost as number

    declare:
        profit as number
        cost as number
        markup as number

    do:
        set profit to price * (margin / 100)
        set cost to price - profit
        set markup to (profit / cost) * 100

        return price, margin, profit, markup, cost
