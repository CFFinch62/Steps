step: sum_of_two_multiples

    belongs to: helpers
    expects: number1, number2, max
    returns: total
    
    declare:
        sum as number fixed
        count as number fixed

    do:
        set sum to 0
        set count to 0
        
        repeat while count is less than or equal to max - 1
            set count to count + 1
            if (count % number1 equals 0) or (count % number2 equals 0) 
                set sum to sum + count          
                
        return sum